<div class="row mt-4">
    <div class="col-lg-4"></div>
    <div class="col-lg-4">
        <a href="/addCourse">
            <button class="btn btn-primary mt-3 mb-3">Quay Lại</button>
        </a>
        <h1 style="text-align: center;">Nhập thông tin môn học</h1>
    </div>
    <div class="col-lg-4"></div>
</div>

<div class="row mt-4">
    <div class="col-lg-4"></div>
    <div class="col-lg-4 border-cus">
        <form method="post" action="/addCourse/add">
            <div class="form-group mt-3">
                <label for="exampleInputEmail1" class="mb-2">Tên môn học</label>
                <input type="text" class="form-control" name="courseName" required>
            </div>
            <div class="form-group mt-3">
                <label for="exampleInputEmail1" class="mb-2">Mã môn học</label>
                <input type="text" class="form-control" name="courseId" required>
            </div>
            <div class="form-group mt-3">
                <label class="mb-2">Khoa</label>
                <select id="role-user" class="form-select" aria-label="Default select example" name="courseFac"
                    required>
                    <option selected>-- Chọn khoa --</option>
                    <option value="Điện Điện-Tử">Điện Điện-Tử
                    </option>
                    <option value="Kỹ Thuật Xây Dựng">Kỹ Thuật Xây Dựng
                    </option>
                    <option value="Cơ Khí">Cơ Khí
                    </option>
                    <option value="Kỹ Thuật Hóa Học">Kỹ Thuật Hóa Học
                    </option>
                    <option value="Khoa Học và Kỹ Thuật Máy Tính">Khoa Học và Kỹ Thuật Máy Tính
                    </option>
                    <option value="Công Nghệ Vật Liệu">Công Nghệ Vật Liệu
                    </option>
                    <option value="Khoa Học Ứng Dụng">Khoa Học Ứng Dụng
                    </option>
                    <option value="Kỹ Thuật Giao Thông">Kỹ Thuật Giao Thông
                    </option>
                    <option value="Quản Lý Công Nghiệp">Quản Lý Công Nghiệp
                    </option>
                    <option value="Kỹ Thuật Địa Chất và Dầu Khí">Kỹ Thuật Địa Chất và Dầu Khí
                    </option>
                    <option value="Môi Trường và Tài Nguyên">Môi Trường và Tài Nguyên
                    </option>
                    <option value="Trung Tâm Bảo Dưỡng Công Nghiệp">Trung Tâm Bảo Dưỡng Công Nghiệp
                    </option>
                </select>
            </div>
            {{#if warning}}
            <div class="mt-3">
                <p style="color: red; text-align: center; margin: 0">{{warning}}</p>
            </div>
            {{/if}}
            {{#if success}}
            <div class="mt-3">
                <p style="color: green; text-align: center; margin: 0">{{success}}</p>
            </div>
            {{/if}}
            <div style="display: flex; justify-content: center;">
                <button type="submit" class="btn btn-primary mt-3 mb-3" style="width: 100%; height: 50px">
                    Thêm môn học
                </button>
            </div>
        </form>
    </div>
    <div class="col-lg-4"></div>
</div>