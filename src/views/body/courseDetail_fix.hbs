<div class="row">
    <div class="col-lg-4"></div>
    <div class="col-lg-4 mt-4">
        <a href="/courseDetail/{{schedule._id}}/{{content._id}}/detail">
            <button class="btn btn-primary mt-3 mb-3">Quay Lại</button>
        </a>
        <h1 style="text-align: center;">Chỉnh sửa nội dung</h1>
    </div>
    <div class="col-lg-4"></div>
</div>
<div class="row mt-4">
    <div class="col-lg-4"></div>
    <div class="col-lg-4 border-cus">
        <form method="post" action="/courseDetail/{{schedule._id}}/{{content._id}}/fix?_method=PATCH"
            enctype="multipart/form-data">
            <div class="form-group mt-3">
                <label for="exampleInputEmail1" class="mb-2">Tiêu đề</label>
                <input type="text" class="form-control" name="tittle" required value="{{content.tittle}}" required>
            </div>
            <div class="form-group mt-3">
                <label for="exampleInputEmail1" class="mb-2">Mô tả</label>
                <input type="text" class="form-control" name="subTittle" value="{{content.subTittle}}" required>
            </div>
            <div class="form-group mt-3">
                <label for="exampleInputEmail1" class="mb-2">Nội dung</label>
                <textarea type="text" class="form-control" name="body">{{content.body}}</textarea>
            </div>
            <div class="mt-3">
                {{#if content.img}}
                <p>Chọn ảnh thay thế mới</p>
                {{else}}
                <p>Chưa có ảnh minh họa</p>
                {{/if}}
                <input class="form-control form-control-sm" type="file" name="img">
            </div>
            <div class="mt-3">
                {{#if content.video}}
                <p>Chọn video thay thế mới</p>
                {{else}}
                <p>Chưa có video bài giảng</p>
                {{/if}}
                <input class="form-control form-control-sm" type="file" name="video">
            </div>
            <div style="display: flex; justify-content: center;">
                <button id="btn" type="submit" class="btn btn-primary mt-3 mb-3" style="width: 100%; height: 50px">
                    Lưu thay đổi
                </button>
            </div>
        </form>
    </div>
    <div class="col-lg-4"></div>
</div>